# Server Connection
SERVER_URL=http://localhost:8000
RUNNER_API_KEY=your-super-secret-runner-api-key
RUNNER_ID=runner-gpu-01

# Polling Config
POLL_INTERVAL_SECONDS=10
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT_SECONDS=3600

# Whisper Config
FASTER_WHISPER_DEVICE=cuda
FASTER_WHISPER_COMPUTE_TYPE=int8_float16
FASTER_WHISPER_MODEL_SIZE=large-v3-turbo
WHISPER_LANGUAGE=zh
WHISPER_THREADS=4

# Audio Chunking
ENABLE_CHUNKING=true
CHUNK_SIZE_MINUTES=10
CHUNK_OVERLAP_SECONDS=15
MAX_CONCURRENT_CHUNKS=4
USE_VAD_SPLIT=true
VAD_SILENCE_THRESHOLD=-30
VAD_MIN_SILENCE_DURATION=0.5
MERGE_STRATEGY=lcs

# GLM API (OpenAI-compatible)
GLM_API_KEY=your-glm-api-key
GLM_MODEL=GLM-4.7-Flash
GLM_BASE_URL=https://api.z.ai/api/paas/v4/
REVIEW_LANGUAGE=zh

# Logging
LOG_LEVEL=INFO
